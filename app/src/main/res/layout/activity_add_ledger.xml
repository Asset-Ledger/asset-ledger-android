<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" >


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="154"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical"
            android:weightSum="154">

            <LinearLayout
                android:id="@+id/activity_add_ledger_plus_minus_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_add_ledger_plus_minus_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_date_time_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_add_ledger_date_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_amount_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_add_ledger_amount_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금액"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_use_category_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:id="@+id/activity_add_ledger_use_category_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분류"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_asset_type_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:id="@+id/activity_add_ledger_asset_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자산"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_asset_detail_type_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:id="@+id/activity_add_ledger_asset_detail_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자산 세부"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_description_title_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/activity_add_ledger_description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="vertical"
            android:weightSum="154">

            <LinearLayout
                android:id="@+id/activity_add_ledger_plus_minus_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/activity_add_ledger_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/activity_add_ledger_plus_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수입"
                        android:textSize="23dp"
                        android:button="@null"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/radio_button_background"
                        android:layout_gravity="center"
                        android:layout_marginLeft="18dp"/>

                    <RadioButton
                        android:id="@+id/activity_add_ledger_minus_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지출"
                        android:textSize="23dp"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:checked="true"
                        android:background="@drawable/radio_button_background"
                        android:layout_marginLeft="18dp" />

                    <RadioButton
                        android:id="@+id/activity_add_ledger_transfer_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이체"
                        android:textSize="23dp"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/radio_button_background"
                        android:layout_marginLeft="18dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_date_time_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activity_add_ledger_date_text_view"
                    android:text="2025/02/09 (월)"
                    android:textSize="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_add_ledger_time_text_view"
                    android:text="오후 6:00"
                    android:textSize="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_amount_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/activity_add_ledger_amount_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="금액"
                    android:textSize="18dp"
                    android:layout_marginLeft="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_use_category_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/activity_add_ledger_use_category_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="분류"
                    android:textSize="18dp"
                    android:layout_marginLeft="18dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_asset_type_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/activity_add_ledger_asset_type_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="자산"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="18dp"
                        android:layout_marginLeft="18dp" />

                </LinearLayout>



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/activity_add_ledger_asset_type_add_button"
                    android:text="추가"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_asset_detail_type_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:weightSum="100"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/activity_add_ledger_asset_detail_type_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:clickable="true"
                        android:hint="자산 세부"
                        android:textSize="18dp"
                        android:layout_marginLeft="18dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/activity_add_ledger_asset_detail_type_add_button"
                    android:text="추가"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_add_ledger_description_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="22"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/activity_add_ledger_description_edit_text"
                    android:hint="내용"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_add_ledger_save_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"
        android:weightSum="100"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_add_ledger_save_save_button"
            android:text="저장"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/activity_add_ledger_save_continue_button"
            android:text="추가 생성"
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>